{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile TypeScript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": "$tsc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run test.js",
            "type": "shell",
            "command": "node",
            "args": [
                "${workspaceFolder}/**/test.js"
            ],
            "dependsOn": "Compile TypeScript",
            "problemMatcher": []
        }
    ]
}